<!DOCTYPE html>
<html>
  <head>
    <title>MerchantsSe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="wrapper">
        <%= tag.p notice, class: notice.nil? ? "" : "alert alert-info" %>
        <%= tag.p alert, class: alert.nil? ? "" : "alert alert-danger" %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>

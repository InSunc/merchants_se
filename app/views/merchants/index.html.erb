<%= current_user.nil? ? "guest" : current_user.email %>
<h1>Merchants:</h1>
<%= form_tag(merchants_path, method: "GET") do -%>
<div class="input-group mb-3">
    <%= text_field_tag :filter, @search, class:"form-control", placeholder:"Merchant's name" %>
    <%= submit_tag 'Filter', class:"btn btn-outline-secondary" %>
</div>
<% end -%>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">City</th>
      <th scope="col">Street</th>
      <th scope="col">Country</th>
    </tr>
  </thead>
  <tbody>
    <% @merchant_addresses.each_with_index do |ma, index| %>
    <tr>
        <th scope="row"><%= index %></th>
        <td><%= ma.merchant.name.titleize%></td>
        <td><%= ma.address.country_city.city.name.titleize %></td>
        <td><%= ma.address.street.titleize %></td>
        <td><%= ma.address.country_city.country.code.upcase %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<button type="button" class="btn btn-primary">Primary</button>
<br>
<hr>
<%= link_to "POST merchants", merchants_path, method: :post %>
<hr>
<%= link_to "Sign In", new_user_session_path, method: :get %>
<hr>
<%= link_to "Sign Out", destroy_user_session_path,
                  method: :delete,
                    data: { confirm: "Are you sure?" } %>